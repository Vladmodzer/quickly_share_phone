


<ItemLabel@Label>:
    font_size: '25sp'
    text_size:self.size
    align:'left'
    valign:'middle'
    color: 0, 1, 1, 1


<Conteiner>:
    rows: 3

    text_input: text_input
    solt:       solt
    nitro:      nitro
    mono:       mono
    starts:     starts
    time:       time

    AnchorLayout:
        size_hint: .9, 0.15
        TextInput:

            id: text_input
            font_size: '45sp'
            multiline: False
            input_type: 'number'
            input_filter: 'int'


    GridLayout:

        cols:2
        BoxLayout:

            padding: [30,0,0,0]
            orientation:'vertical'

            ItemLabel:
                text: 'соль'

            ItemLabel:
                text: 'нитритная соль'

            ItemLabel:
                text: 'моно сахара'

            ItemLabel:
                text: 'старты'

            ItemLabel:
                text: 'время засолки'



        BoxLayout:
            orientation:'vertical'
            size_hint: 0.5, 1
            ItemLabel:
                id: solt
                text: '0'

            ItemLabel:
                id: nitro
                text: '0'

            ItemLabel:
                id: mono
                text: '0'

            ItemLabel:
                id: starts
                text: '0'

            ItemLabel:
                id: time
                text: '0'




    BoxLayout:
        size_hint: 0.9,  0.15
        padding: [30,0,30,30]

        Button:

            text:'GO'
            font_size: 40
            on_release:
                root.calculate()

